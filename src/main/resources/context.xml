<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="sonyHead" class="home.javabegin.training.spring.impls.sony.SonyHead"/>
    <bean id="sonyHand" class="home.javabegin.training.spring.impls.sony.SonyHands"/>
    <bean id="sonyLeg" class="home.javabegin.training.spring.impls.sony.SonyLegs"/>

    <bean id="toshibaHead" class="home.javabegin.training.spring.impls.toshiba.ToshibaHead"/>
    <bean id="toshibaHand" class="home.javabegin.training.spring.impls.toshiba.ToshibaHands"/>
    <bean id="toshibaLeg" class="home.javabegin.training.spring.impls.toshiba.ToshibaLegs"/>

    <bean id="t1000" class="home.javabegin.training.spring.impls.robot.ModelT1000">
        <constructor-arg ref="toshibaHand"/>
        <constructor-arg ref="toshibaLeg"/>
        <constructor-arg ref="toshibaHead"/>

        <property name="hands" ref="sonyHand"/>
        <property name="legs" ref="sonyLeg"/>
        <property name="head" ref="sonyHead"/>
    </bean>

</beans>